//Exemplo 6 - Somar dois números e exibir resultado
//Autor: Pedro Nicolas Costa 

programa {
  funcao inicio() {
  
    inteiro numeroX=0, numeroY=0, soma=0
    escreva("\n DIGITE o primeiro NÚMERO \n")
    leia(numeroX)

    escreva("\n DIGITE o segundo NÚMERO \n")
    leia(numeroY)

    soma = numeroX + numeroY

    escreva("\n SOMA = ", soma, "\n")
    
  }
}
